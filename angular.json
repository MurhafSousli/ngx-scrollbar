{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm"
  },
  "newProjectRoot": "projects",
  "projects": {
    "ngx-scrollbar-demo": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/ngx-scrollbar-demo",
      "sourceRoot": "projects/ngx-scrollbar-demo/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "projects/ngx-scrollbar-demo/src/main.ts",
            "tsConfig": "projects/ngx-scrollbar-demo/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/ngx-scrollbar-demo/public"
              }
            ],
            "styles": [
              "projects/ngx-scrollbar-demo/src/styles.scss",
              "node_modules/ng-zorro-antd/resizable/style/index.css"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "node_modules/ng-zorro-antd/resizable/style",
                "projects"
              ]
            },
            "allowedCommonJsDependencies": [
              "chance"
            ],
            "server": "projects/ngx-scrollbar-demo/src/main.server.ts",
            "outputMode": "server",
            "ssr": {
              "entry": "projects/ngx-scrollbar-demo/src/server.ts"
            }
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "1MB",
                  "maximumError": "2MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "8kB",
                  "maximumError": "16kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "ngx-scrollbar-demo:build:production"
            },
            "development": {
              "buildTarget": "ngx-scrollbar-demo:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular/build:unit-test"
        }
      }
    },
    "ngx-scrollbar": {
      "projectType": "library",
      "root": "projects/ngx-scrollbar",
      "sourceRoot": "projects/ngx-scrollbar/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/ngx-scrollbar/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/ngx-scrollbar/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:unit-test",
          "options": {
            "tsConfig": "projects/ngx-scrollbar/tsconfig.spec.json",
            "browsers": [
              "ChromiumHeadless"
            ],
            "coverage": true,
            "coverageReporters": ["text", "json", "html", "cobertura"],
            "coverageExclude": [
              "projects/ngx-scrollbar/smooth-scroll"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/ngx-scrollbar/**/*.ts",
              "projects/ngx-scrollbar/**/*.html"
            ],
            "eslintConfig": "projects/ngx-scrollbar/eslint.config.js"
          }
        }
      }
    }
  }
}
