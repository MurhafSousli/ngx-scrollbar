{
  "name": "ngx-scrollbar",
  "version": "0.0.0",
  "scripts": {
    "start": "ng serve",
    "start-mobile": "ng serve --host 0.0.0.0",
    "build": "ng build ngx-scrollbar-demo --ssr=false --prerender=false",
    "build-ssr": "ng build ngx-scrollbar-demo",
    "watch": "ng build --watch --configuration development",
    "build-lib": "ng build ngx-scrollbar",
    "lint-lib": "ng lint ngx-scrollbar",
    "test-lib": "ng test ngx-scrollbar --browsers=chromium",
    "test-lib-headless": "ng test ngx-scrollbar --no-watch",
    "serve:ssr:ngx-scrollbar-demo": "node dist/ngx-scrollbar-demo/server/server.mjs"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@9.6.1",
  "overrides": {
    "@angular/core": "$@angular/core",
    "@angular/common": "$@angular/common",
    "@angular/platform-browser": "$@angular/platform-browser"
  },
  "dependencies": {
    "@angular/cdk": "^21.0.3",
    "@angular/common": "^21.0.5",
    "@angular/compiler": "^21.0.5",
    "@angular/core": "^21.0.5",
    "@angular/forms": "^21.0.5",
    "@angular/material": "^21.0.3",
    "@angular/platform-browser": "^21.0.5",
    "@angular/platform-server": "^21.0.5",
    "@angular/router": "^21.0.5",
    "@angular/ssr": "^21.0.3",
    "@ctrl/tinycolor": "^4.2.0",
    "@primeng/themes": "^21.0.1",
    "@swimlane/ngx-datatable": "^22.0.0",
    "ag-grid-angular": "^35.0.0",
    "ag-grid-community": "^35.0.0",
    "chance": "^1.1.13",
    "express": "^5.1.0",
    "ng-zorro-antd": "^21.0.0-next.1",
    "ngx-color-picker": "^20.1.1",
    "ngx-infinite-scroll": "^21.0.0",
    "primeng": "^21.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.3",
    "@angular/cli": "^21.0.3",
    "@angular/compiler-cli": "^21.0.5",
    "@playwright/test": "^1.57.0",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "@vitest/browser-playwright": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "angular-eslint": "21.1.0",
    "eslint": "^9.39.1",
    "jsdom": "^27.3.0",
    "ng-packagr": "^21.0.0",
    "npm": "^11.7.0",
    "playwright": "^1.57.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.47.0",
    "uninstall": "^0.0.0",
    "vitest": "^4.0.15"
  }
}
